#!/usr/bin/env node

const pm2 = require('pm2');

const connectPM = require('../lib/connectPM');
const printProcDescs = require('../lib/printProcDescs');
const getProcessList = require('../lib/getProcessList');

connectPM()
    .then(getProcessList)
    .then((procDescs) => {
        printProcDescs(procDescs);
        pm2.disconnect();
        process.exit(0);
    })
    .catch((err) => {
        console.error(err);
        process.exit(1);
    });
